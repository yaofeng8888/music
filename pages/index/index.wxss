.banners {
width: 100%;
height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}
.navContainer {
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont {
  font-size: 50rpx;
  color: white;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: rgb(240, 19, 19);
  margin: 20rpx 0rpx;
}
.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recomdContainer{
  padding: 20rpx;
}

/* 推荐内容区 */
.recomdScroll{
  display: flex;
  height: 300rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出 隐藏部分 */
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;

  /*多行文本溢出 隐藏部分 
  display: -webkit-box;
  -webkit-box-orient: vertical; <-- 设置对齐模式!-->
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;*/
}

.topList{
  padding: 20rpx;
}

.topItem{
width: 96%;
background-color: #fbfbfb;
}

.topItem .title{
font-size: 30rpx;
line-height: 80rpx;
}
.topListSwiper{
  height: 400rpx;
}
.musicItem {
  /* 当一个元素设置为flex  其子元素自动成为block元素 */
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 6rpx;
}

.musicItem .count{
  height: 100rpx;
  width: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
